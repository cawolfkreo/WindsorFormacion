<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".FormacionActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/TituloFormacion"
                android:text="@string/titulo_formacion"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" android:textSize="18sp"
                android:textColor="@color/Titulo"
                android:layout_marginTop="8dp"/>
        <TextView
                android:text="@string/txtProcesandoRovers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/txtFormacion"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/TituloFormacion" android:textColor="@color/Titulo"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>